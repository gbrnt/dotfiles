interval=5
color=#808080

[volume]
label=V:
command=pamixer --get-volume
signal=1

[wifi]
label=W:
command=nmcli -f ACTIVE,SIGNAL dev wifi list | awk '$1=="yes" {print $2}'

[battery]
label=B:
command=batt_totals
interval=60

[time]
command=date +%a\ %d\ %B\ %H:%M

[temperature]
instance=Core
label=T
interval=5
